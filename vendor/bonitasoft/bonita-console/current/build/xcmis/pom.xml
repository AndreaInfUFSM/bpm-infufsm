<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>build</artifactId>
		<groupId>org.bonitasoft.console</groupId>
		<version>5.6.1</version>
	</parent>
	<groupId>org.bonitasoft.console</groupId>
	<artifactId>xcmis-war-all-in-one</artifactId>
	<packaging>war</packaging>
	<name>xCMIS all-in-one</name>

	<dependencies>
		<!-- dependency>
			<groupId>org.ow2.bonita</groupId>
			<artifactId>bonita-client</artifactId>
			<scope>runtime</scope>
			<exclusions>
			 	<exclusion>
			 		<groupId>org.slf4j</groupId>
					<artifactId>slf4j-api</artifactId>
			 	</exclusion>
			 	<exclusion>
			 		<groupId>org.slf4j</groupId>
					<artifactId>slf4j-jdk14</artifactId>
			 	</exclusion>
			 	<exclusion>
			 		<groupId>org.jboss.resteasy</groupId>
					<artifactId>resteasy-jaxrs-all</artifactId>
			 	</exclusion>
			 </exclusions>
		</dependency-->
		<dependency>
			<groupId>org.ow2.bonita</groupId>
			<artifactId>bonita-xcmis-war</artifactId>
			<type>war</type>
			<version>${bonita.version}</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-xcmis-war</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.ow2.bonita</groupId>
									<artifactId>bonita-xcmis-war</artifactId>
									<version>${bonita.version}</version>
									<type>war</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/xcmis-war/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-bonita-client</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.ow2.bonita</groupId>
									<artifactId>bonita-client</artifactId>
									<version>${bonita.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/xcmis-war/WEB-INF/lib</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>get-jaxrs-api</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>jaxrs-api</artifactId>
									<version>1.2.1.GA</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/xcmis-war/WEB-INF/lib</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<resource>
							<directory>${project.build.directory}/xcmis-war/</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>